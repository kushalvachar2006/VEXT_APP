<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <!-- Top Navigation Bar -->
    <RelativeLayout
        android:id="@+id/nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/back_btn_profile_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_btn"/>

        <TextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/back_btn_profile_page"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="Profile"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </RelativeLayout>

    <!-- Profile Picture Section -->
    <RelativeLayout
        android:id="@+id/profile_pic_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/nav_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/profile_view_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_maker"
            android:backgroundTint="#8A8A8A"
            android:scaleType="center"
            android:src="@drawable/profile_icon"/>

        <Button
            android:id="@+id/profile_edit_btn"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@id/profile_view_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_bg"
            android:text="Edit Profile Pic"
            android:textAllCaps="false"
            android:textSize="15sp"/>
    </RelativeLayout>

    <!-- Profile Info Section -->
    <RelativeLayout
        android:id="@+id/profile_info_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile_pic_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Name -->
        <ImageView
            android:id="@+id/name_icon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/name_icon"
            android:textSize="15sp"
            android:clickable="true"
            android:text="Name"/>

        <TextView
            android:id="@+id/setname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/name_icon"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="#808080"/>

        <!-- About -->
        <ImageView
            android:id="@+id/about_icon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_below="@id/setname"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/about_icon"/>

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setname"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/about_icon"
            android:textSize="15sp"
            android:clickable="true"
            android:text="About"/>

        <TextView
            android:id="@+id/setabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/about_icon"
            android:text="Hey there! I am using Vext App"
            android:textSize="13sp"
            android:textColor="#808080"/>

        <!-- Email -->
        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_below="@id/setabout"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/email_icon"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setabout"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:layout_toEndOf="@id/email_icon"
            android:text="Email"/>

        <TextView
            android:id="@+id/setemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/email_icon"
            android:textSize="15sp"
            android:textColor="#808080"/>
<!--        Phone-->
        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/setemail"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/phone"
            android:tint="@color/black"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setemail"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:layout_toEndOf="@id/phone_icon"
            android:text="Phone"/>

        <TextView
            android:id="@+id/setphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/phone_icon"
            android:textSize="13sp"
            android:textColor="#808080"/>
    </RelativeLayout>


    <View
        android:id="@+id/overlay_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Edit Card Aligned to Bottom -->
    <androidx.cardview.widget.CardView
        android:id="@+id/edit_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Close Button Aligned Right -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/exitbtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_maker"
                    android:text="Ã—"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:elevation="2dp"/>
            </RelativeLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Edit"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <!-- Input Field -->
            <EditText
                android:id="@+id/edit_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:hint="Enter value"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                android:textSize="16sp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"/>

            <!-- Save Button -->
            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/button_shadow"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:elevation="2dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
