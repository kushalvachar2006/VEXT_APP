<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_gradient"
    tools:context=".SigninWithEmail">
    <ImageView
        android:id="@+id/logo_only"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/logo_only"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/create_your_account"/>

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SignIn"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_only" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_in">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:id="@+id/signin_components"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_txt"
                android:text="Email:"
                android:layout_marginTop="10dp"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/enteremail"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/email_txt"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter your email"
                android:padding="10dp"
                android:inputType="textEmailAddress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/password_txt"
                android:text="Password:"
                android:layout_marginTop="10dp"
                android:layout_below="@id/enteremail"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/enterpassword"
                android:layout_width="300dp"
                android:layout_below="@id/password_txt"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="Enter your Password"
                android:background="@drawable/edittext_bg"
                android:padding="10dp"
                android:inputType="textPassword" />
            <ImageButton
                android:id="@+id/password_toggle"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/password_txt"
                android:layout_toRightOf="@id/enterpassword"
                android:background="@drawable/eye_open" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/enterpassword"
                android:layout_marginTop="10dp"
                android:text="Forgot Password?"
                android:textSize="12dp"
                android:textColor="#808080"
                android:id="@+id/forgot_password"
                android:clickable="true"/>
            <Button
                android:id="@+id/signin_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@id/forgot_password"
                android:background="@drawable/button_shadow"
                android:layout_marginTop="10dp"
                android:text="Signin"
                android:textAllCaps="false"
                android:textColor="#000888"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>