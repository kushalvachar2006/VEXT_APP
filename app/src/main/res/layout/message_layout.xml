<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".Message_layout">

    <!-- Header Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:src="@drawable/back_btn"
                android:scaleType="centerCrop"
                android:contentDescription="Back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/profileImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/profile_icon"
                android:background="@drawable/circle_maker"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/backbtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout
                android:id="@+id/userInfoLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:clickable="true"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[Name]"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"/>

                <TextView
                    android:id="@+id/userStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textSize="13sp"
                    android:visibility="gone"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/deleteBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/deleteimg"
                android:scaleType="centerCrop"
                android:contentDescription="Delete"
                android:background="@drawable/circle_maker"
                android:padding="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageButton
                android:id="@+id/callbtnplus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/new_call_icon"
                android:scaleType="centerCrop"
                android:contentDescription="Delete"
                android:background="@drawable/circle_maker"
                android:padding="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!--    Contact info-->
    <View
        android:id="@+id/shadowOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="invisible"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/contactinfo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toTopOf="@id/messageInputCard"
        app:cardUseCompatPadding="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_border"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/exitbtn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="#02FFFFFF"
                android:text="Ã—"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/profile_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/exitbtn"
                android:src="@drawable/profile_icon"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="[Name]"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/userphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="[Phone number]"
                android:textColor="#808080"
                android:textSize="13sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/userphonenumber">
                <LinearLayout
                    android:id="@+id/messagebtnlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:clickable="true">
                    <ImageButton
                        android:id="@+id/messagebtn"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/chats"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/messagebtn"
                        android:text="Message"
                        android:textAlignment="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/callsbtnlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10sp"
                    android:clickable="true">
                    <ImageButton
                        android:id="@+id/callbtn"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/phone"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/callbtn"
                        android:textAlignment="center"
                        android:text="Call"/>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

<!--    Calloption-->
    <androidx.cardview.widget.CardView
        android:id="@+id/callinfo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/voicecall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/curved_border"
                android:padding="10dp"
                android:clickable="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/text_voicecall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voice Call"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/voicecall_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/phone"
                    android:background="@drawable/circle_maker"
                    android:scaleType="centerCrop"
                    android:contentDescription="Voice call icon" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/videocall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/curved_border"
                android:clickable="true"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_videocall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video Call"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/videocall_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/videocall"
                    android:background="@drawable/circle_maker"
                    android:scaleType="centerCrop"
                    android:contentDescription="Video call icon" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintBottom_toTopOf="@id/messageInputCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Message Input Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/messageInputCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/attachBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="Attach"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/messageInputContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F0F2F5"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@id/attachBtn"
                app:layout_constraintEnd_toStartOf="@id/sendBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:maxLines="5"
                    android:hint="Type a message..."
                    android:textColorHint="#95A5A6"
                    android:textColor="#2C3E50"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@android:drawable/ic_menu_camera"
                    android:inputType="textCapSentences|textMultiLine"/>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/sendBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:fabCustomSize="48dp"
                app:fabSize="mini"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_send"
                android:contentDescription="Send message"
                app:elevation="4dp"
                android:tint="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>