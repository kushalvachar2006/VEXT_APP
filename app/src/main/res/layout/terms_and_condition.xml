<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsAndCondition">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to "
        android:id="@+id/welcometo"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Tap &quot;Agree and continue&quot; to accept the Vext's"
        android:textFontWeight="500"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/t_and_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tap"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="T&amp;C service and policy"
        android:textColor="#00B2CA"
        android:textSize="15dp"
        android:textFontWeight="500" />

    <Button
        android:id="@+id/agree_continue"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/t_and_c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shadow"
        android:foregroundTint="#00BFA5"
        android:paddingBottom="5dp"
        android:text="Agree and continue"
        android:textColor="#000000" />
    <View
        android:id="@+id/shadowOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="invisible"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/t_c_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        android:layout_alignParentBottom="true"
        app:cardUseCompatPadding="true"
        android:visibility="invisible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_border"
        android:orientation="vertical"
        android:padding="15dp">
        <Button
            android:id="@+id/exitbtn"
            android:layout_width="50dp"
            android:text="Ã—"
            android:textSize="20dp"
            android:layout_height="30dp"
            android:layout_marginLeft="315dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/t_c_text"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="2dp"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"

            />
        <TextView
            android:id="@+id/privacy_text"
            android:layout_below="@id/t_c_text"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="2dp"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>