<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage"
    android:id="@+id/root_layout">

                <!--Top_NavBar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_navbar"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:elevation="10dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/vextapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VextApp"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <ImageButton
            android:id="@+id/menu_icon_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/menu"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_bg"
        android:drawableStart="@drawable/search_icon_xml"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/top_navbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

                <!--    3dot_Menu-->
    <RelativeLayout
        android:id="@+id/menu_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_navbar"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10sp"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:padding="15dp">

                <Button
                    android:id="@+id/view_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:drawableStart="@drawable/profile_icon"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="View Profile"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/signout_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_profile_btn"
                    android:layout_marginTop="10dp"
                    android:background="#00FFFFFF"
                    android:drawableStart="@drawable/signout_icon"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Sign out"
                    android:textAllCaps="false" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

                    <!--Main_Container-->
    <!--Fallback-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navbar"
        >
        <TextView
            android:id="@+id/plusnewchat"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textAlignment="center"
            android:visibility="gone"/>
    </RelativeLayout>

    <!--    For Chats-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_for_chats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navbar">
    </androidx.recyclerview.widget.RecyclerView>

    <!--    For Calls-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_for_calls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navbar"
        android:visibility="gone">
    </androidx.recyclerview.widget.RecyclerView>


    <View
        android:id="@+id/overlay_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/new_chat_btn"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/circle_maker"
        android:elevation="8dp"
        android:src="@drawable/new_chat_xml"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@id/bottom_navbar"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:textSize="20sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/contactinfo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toTopOf="@id/bottom_navbar"
        app:cardUseCompatPadding="true"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_border"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/exitbtn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="#02FFFFFF"
                android:text="Ã—"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/profile_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/exitbtn"
                android:src="@drawable/profile_icon"
                android:clickable="true"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="[Name]"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/userphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="[Phone number]"
                android:textColor="#808080"
                android:textSize="13sp"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userphonenumber"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:id="@+id/messagebtnlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/messagebtn"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/chats" />

                    <TextView
                        android:id="@+id/messagebtn_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/messagebtn"
                        android:text="Message"
                        android:textAlignment="center"
                        android:clickable="true"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/callsbtnlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10sp"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/callbtn"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/phone" />

                    <TextView
                        android:id="@+id/callbtn_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/callbtn"
                        android:text="Call"
                        android:textAlignment="center"
                        android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/call_options_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/linearLayout"
                android:layout_below="@id/userphonenumber"
                android:orientation="vertical">
                <Button
                    android:id="@+id/voice_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Voice"
                    android:drawableStart="@drawable/phone_xml"
                    android:background="@drawable/edittext_bg"
                    android:textAllCaps="false" />
                <Button
                    android:id="@+id/video_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video"
                    android:padding="8dp"
                    android:drawableStart="@drawable/videocall_xml"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_bg"
                    android:textAllCaps="false" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!--    Bottom_Navbar    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipToOutline="false"
        android:background="@drawable/rounded_top_corners"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

                <!-- Chats Button -->
    <ImageButton
        android:id="@+id/chats_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/chats"
        android:clickable="true"/>

             <!-- Chats Label Centered Under Button -->
    <TextView
        android:id="@+id/chats_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chats_btn"
        android:layout_alignStart="@id/chats_btn"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Chats"
        android:textSize="16sp"
        android:clickable="true"/>

                     <!-- Phone Button -->
    <ImageButton
        android:id="@+id/phone_btn"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:background="@drawable/phone"
        android:clickable="true"/>

            <!-- Calls Label Centered Under Button -->
    <TextView
        android:id="@+id/phone_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_btn"
        android:layout_alignStart="@id/phone_btn"
        android:gravity="center"
        android:text="Calls"
        android:textColor="@color/black"
        android:clickable="true"
        android:textSize="15sp" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>