<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_gradient"
    tools:context=".Login_Page">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:id="@+id/icon_plus_info">
        <ImageView
            android:id="@+id/logo_only"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_only"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>
        <!-- Slideshow (auto loop) -->
        <ViewFlipper
            android:id="@+id/slideshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_only"
            android:layout_marginTop="20dp"
            android:flipInterval="1500"
            android:autoStart="true"
            android:inAnimation="@anim/slide_in_right"
            android:outAnimation="@anim/slide_out_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast, Secure &amp; Reliable"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat with friends instantly"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share photos, videos &amp; more"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
        </ViewFlipper>
        <!-- Slideshow (auto loop) -->
        <ViewFlipper
            android:id="@+id/slideshow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/slideshow"
            android:layout_marginTop="10dp"
            android:flipInterval="1500"
            android:autoStart="true"
            android:inAnimation="@anim/slide_in_right"
            android:outAnimation="@anim/slide_out_right">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/privacy_policy"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/chat"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/multimedia"/>
        </ViewFlipper>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_plus_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp">

            <Button
                android:id="@+id/signin_with_google_btn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/button_shadow"
                android:layout_centerHorizontal="true"
                android:text="Continue with Google"
                android:drawableStart="@drawable/googleg_standard_color_18"
                android:drawablePadding="-15dp"
                android:textAllCaps="false"
                android:textSize="15dp" />



            <Button
                android:id="@+id/signin_with_email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/signin_with_google_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:text="Continue with Email"
                android:textAllCaps="false"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dont_have_accnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signin_with_email"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:text="Don't have account? "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/sign_up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signin_with_email"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/dont_have_accnt"
                android:clickable="true"
                android:text="Sign up"
                android:textColor="#00B2CA"
                android:textSize="15dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>